<% include header.ejs %>
<div class="container">
  <div class="row">
    <div style="margin: 20px 0" class="col-lg-8">
      <div class="card">
        <img width="100%" height="400px" src="/uploads/<%= product.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= product.name %>
          </h5>
          <p class="card-text">
            <%= product.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price - <span>
              <%= product.price %></span></li>
          <li class="list-group-item">Location - <span>
              <%= product.location %></span></li>
        </ul>
        <div class="card-body">
          <a href="/editProduct/<%= product.id %>" class="btn btn-info btn-sm">Edit</a>
          <form style="display: inline" action="/deleteProduct" method="POST">
            <input type="hidden" id="deleteProduct" name="deleteProduct" value="<%= product.id %>" />
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<% include footer.ejs %>